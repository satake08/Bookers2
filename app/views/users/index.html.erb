<p>
  <%= flash[:notice] %>
</p>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">

        <%= render 'books/list', user: @user %>
        <!--投稿一覧-->
        <div class="col-md-8 offset-md-1">
          <h2>Users</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th></th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <% @users.each do |user| %>
            <tr>
              <td class="image"><%= image_tag user.get_profile_image(80,80) %></td>
              <td class="title"><%= user.name %></td>
              <td class="show-link"><%= link_to "Show", user_path(user.id) %></td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>