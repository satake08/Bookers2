<p>
  <%= flash[:notice] %>
</p>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">

        <%= render 'books/list', user: @user %>
        <!--投稿一覧-->
        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <% @books.each do |book| %>
            <tr>
              <td class="image"><%= link_to image_tag(book.user.get_profile_image(80,80)),user_path(book.user) %></td>
              <td class="title"><%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
              </td>
              <td class="body"> <%= book.body %> </td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>