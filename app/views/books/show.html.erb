<!--投稿の詳細-->
<div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
                <% @books.each do |book| %>
                <tr>
                  <td class="image"><%= image_tag current_user.get_profile_image(100,100) %></td><br>
                  <td class="title"><%= link_to "/books" do %>
                    <%= @user.name %>
                  <% end %>
                  </td>
                  <td class="title"><%= link_to "/books" do %>
                    <%= book.title %>
                  <% end %>
                  </td>
                  <td class="body"> <%= book.body %> </td>
                  <% end %>
                  <% if @book.user == current_user %>
                    <td class="show-link"><%#= link_to "Show", book_path(book.id) %></td>
                    <td class="edit-link"><%#= link_to "Edit", edit_book_path(book.id), class: "btn btn-sm btn-success edit_book_61039" %></td>
                    <a href="/books/61039/edit">
                    <td class="destroy-link"><%#= link_to "Destroy", book_path(book.id),  class="btn btn-sm btn-danger destroy_book_61039", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
                    <a href="/books/61039">
                  <% end %>
                </tr>
              </tr>
            </thead>
          </table>
        </div>