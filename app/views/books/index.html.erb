<!--ユーザー画面-->
<div>
  <%= flash[:notice] %>
</div>

<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag current_user.get_profile_image(100,100) %>
        <tbody>
          <table class="table">
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </table>
        </tbody>

        <div class="row">
          <%= link_to edit_user_path(@user.id),class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
      <!--投稿画面-->
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book do |f| %>
          <% if @book.errors.any? %>
            <%= @book.errors.count %> errors prohibited this book from being saved:
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>


          <div class="form-group">
            <label for="book_title">Title</label>
            <%= f.text_field :title, class:"form-control book_title" %>
          </div>
          <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book', class:"btn btn-success" %>
          </div>
        <% end %>
        </div>
        <!--投稿一覧-->
        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
                <% @books.each do |book| %>
    <tr>
      <td class="title"> <%= book.title %> </td>
      <td class="body"> <%= book.body %> </td>

      <td class="show-link"><%= link_to "Show", book_path(book.id) %></td>
      <td class="edit-link"><%#= link_to "Edit", edit_book_path(book.id) %></td>
      <td class="destroy-link"><%#= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
  <% end %>
              </tr>
            </thead>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>